<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/ivAnimalImage"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:padding="4dp"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/animal_image" />

    <TextView
        android:id="@+id/tvAnimalName"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/animal_name"
        app:layout_constraintStart_toEndOf="@id/ivAnimalImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAnimalLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/animal_location"
        app:layout_constraintStart_toStartOf="@id/tvAnimalName"
        app:layout_constraintTop_toBottomOf="@id/tvAnimalName" />

</androidx.constraintlayout.widget.ConstraintLayout>